{
  "name": "vocario",
  "version": "0.0.31",
  "author": "dotnetjedi",
  "homepage": "https://vocario.web.app/",
  "scripts": {
    "start": "react-scripts start",
    "build": "rimraf ./build && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier --write \"./src/{,!(node_modules|dist|build|coverage)/**/}*.{js,jsx,ts,tsx,json}\"",
    "pre-commit": "lint-staged",
    "lint": "tsc --noEmit && eslint ./src/**/*.{js,jsx,ts,tsx}",
    "lint:fix": "eslint --fix ./src/**/*.{js,jsx,ts,tsx}",
    "firebase:upload": "node ./scripts/firebase-upload.js",
    "firebase:deploy": "npm run build && firebase deploy --only hosting:web",
    "firebase:get-files": "node ./scripts/firebase-get-files.js"
  },
  "private": true,
  "dependencies": {
    "@ionic/pwa-elements": "^1.5.2",
    "@ionic/react": "^5.1.0",
    "@ionic/react-hooks": "^0.0.6",
    "@ionic/react-router": "^5.1.0",
    "@reduxjs/toolkit": "^1.3.5",
    "@vx/axis": "0.0.195",
    "@vx/scale": "0.0.195",
    "date-fns": "^2.12.0",
    "firebase": "^7.14.2",
    "formik": "^2.1.4",
    "ionicons": "^5.0.1",
    "node-sass": "^4.14.0",
    "react": "^16.13.1",
    "react-audio-player": "^0.13.0",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "react-scripts": "^3.4.1",
    "react-simple-keyboard": "^2.3.21",
    "react-sizeme": "^2.6.12",
    "zen-observable": "^0.8.15"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "description": "Simple vocabulary application made on React and Ionic with a backend on Firebase",
  "devDependencies": {
    "@types/d3-array": "^2.0.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.37",
    "@types/react": "^16.9.34",
    "@types/react-audio-player": "^0.11.0",
    "@types/react-dom": "^16.9.7",
    "@types/react-redux": "^7.1.7",
    "@types/react-router": "^5.1.7",
    "@types/react-router-dom": "^5.1.5",
    "@types/webpack-env": "^1.15.2",
    "@types/zen-observable": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "csv-parse": "^4.9.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "firebase-admin": "^8.11.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
